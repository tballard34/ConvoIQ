{
  "name": "convoiq",
  "version": "1.0.0",
  "description": "ConvoIQ - AI-powered conversation analysis tool",
  "type": "module",
  "license": "Apache-2.0",
  "scripts": {
    "start": "harperdb run .",
    "dev": "npm run build && harperdb dev .",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "vite build",
    "build:backend": "tsc backend/agent-prompts.ts backend/agent-tools.ts backend/title-generators.ts backend/resources.ts backend/routes/spa-fallback.ts --outDir operations --rootDir . --module ESNext --target ES2022 --moduleResolution node --skipLibCheck --allowSyntheticDefaultImports",
    "preview": "vite preview",
    "seed": "tsx scripts/seed.ts",
    "seed:convos": "tsx scripts/seed-convos.ts",
    "seed:components": "tsx scripts/seed-components.ts",
    "deploy": "npx -y dotenv-cli -e .env.local -- harperdb deploy project=convoiq target=${CLI_TARGET} username=${CLI_TARGET_USERNAME} password=${CLI_TARGET_PASSWORD} restart=true replicated=true",
    "deploy:build": "npm run build && npm run deploy",
    "generate-tree": "node scripts/generate-tree-rule.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/s3-request-presigner": "^3.922.0",
    "@babel/standalone": "^7.28.5",
    "@deepgram/sdk": "^4.11.2",
    "@monaco-editor/react": "^4.7.0",
    "@openrouter/sdk": "^0.1.0",
    "@tailwindcss/vite": "^4.1.16",
    "fluent-ffmpeg": "^2.1.3",
    "marked": "^16.4.1",
    "node-fetch": "^3.3.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-dropzone": "^14.3.8",
    "react-icons": "^5.5.0",
    "react-resizable-panels": "^3.0.6",
    "react-rnd": "^10.5.2",
    "react-router-dom": "^7.9.5",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vite": "^7.1.12"
  }
}
